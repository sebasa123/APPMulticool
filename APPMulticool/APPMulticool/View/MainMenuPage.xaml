<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APPMulticool.View.MainMenuPage"
             Title="Menu principal">
    <ContentPage.Content>

        <FlexLayout Direction="Column" VerticalOptions="CenterAndExpand">

            <Grid Padding="10,15,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.ColumnSpan="2" x:Name="BtnPedidoManagement"
                            Text="Pedidos" BackgroundColor="MediumSpringGreen" FontSize="20"
                            VerticalOptions="CenterAndExpand" HeightRequest="110" 
                            WidthRequest="100" CornerRadius="15" Clicked="BtnPedidoManagement_Clicked"/>

                <Button Grid.Row="1" Grid.Column="0" x:Name="BtnRepuestoManagement"
                            Text="Repuestos" BackgroundColor="LightSkyBlue" FontSize="20"
                            VerticalOptions="CenterAndExpand" HeightRequest="110" 
                            WidthRequest="100" CornerRadius="15" Clicked="BtnRepuestoManagement_Clicked"/>

                <Button Grid.Row="1" Grid.Column="1" x:Name="BtnTipoRepuestoManagement"
                            Text="Tipos de repuestos" BackgroundColor="LightSkyBlue" FontSize="20"
                            VerticalOptions="CenterAndExpand" HeightRequest="110" 
                            WidthRequest="100" CornerRadius="15" Clicked="BtnTipoRepuestoManagement_Clicked"/>

                <Button Grid.Row="2" Grid.ColumnSpan="2" x:Name="BtnClienteManagement"
                            Text="Clientes" BackgroundColor="MediumSpringGreen" FontSize="20"
                            VerticalOptions="CenterAndExpand" HeightRequest="110" 
                            WidthRequest="100" CornerRadius="15" Clicked="BtnClienteManagement_Clicked"/>

                <Button Grid.Row="3" Grid.Column="0" x:Name="BtnProductoManagement"
                            Text="Productos" BackgroundColor="LightSkyBlue" FontSize="20"
                            VerticalOptions="CenterAndExpand" HeightRequest="110" 
                            WidthRequest="100" CornerRadius="15" Clicked="BtnProductoManagement_Clicked"/>

                <Button Grid.Row="3" Grid.Column="1" x:Name="BtnTipoProductoManagement"
                            Text="Tipos de productos" BackgroundColor="LightSkyBlue" FontSize="20"
                            VerticalOptions="CenterAndExpand" HeightRequest="110" 
                            WidthRequest="100" CornerRadius="15" Clicked="BtnTipoProductoManagement_Clicked"/>

                <Button Grid.Row="4" Grid.ColumnSpan="2" x:Name="BtnHerramientaManagement"
                            Text="Herramientas" BackgroundColor="MediumSpringGreen" FontSize="20"
                            VerticalOptions="CenterAndExpand" HeightRequest="110" 
                            WidthRequest="100" CornerRadius="15" Clicked="BtnHerramientaManagement_Clicked"/>

                <Button Grid.Row="5" Grid.Column="0" x:Name="BtnUsuarioManagement"
                            Text="Usuarios" BackgroundColor="LightSkyBlue" FontSize="20"
                            VerticalOptions="CenterAndExpand" HeightRequest="110" 
                            WidthRequest="100" CornerRadius="15" Clicked="BtnUsuarioManagement_Clicked"/>

                <Button Grid.Row="5" Grid.Column="1" x:Name="BtnTipoUsuarioManagement"
                            Text="Tipos de usuarios" BackgroundColor="LightSkyBlue" FontSize="20"
                            VerticalOptions="CenterAndExpand" HeightRequest="110" 
                            WidthRequest="100" CornerRadius="15" Clicked="BtnTipoUsuarioManagement_Clicked"/>
            </Grid>
        </FlexLayout>

    </ContentPage.Content>
</ContentPage>